#define _CRT_SECURE_NO_WARNINGS
#pragma comment(linker, "/STACK:28388608")   // 8MB 스택메모리늘려줌
#include <stdio.h>
#include <stdlib.h>    // srand, rand 함수가 선언된 헤더 파일
#include <string.h>
#include <stdbool.h>
#include <stddef.h>
#include <math.h>

struct P {
    short x;
    short y;
    short z;
};

int box[102][102][102];
int m, n, h;
int head, tail;

int dx[6] = { 1,0,-1,0 ,0,0 };
int dy[6] = { 0,1,0,-1 ,0,0 };
int dz[6] = { 0,0,0,0,1,-1 };

void push(struct P Q[], int z, int x, int y) {
    Q[tail].x = x;
    Q[tail].y = y;
    Q[tail].z = z;
    tail++;
}

void pop() {
    head++;
}

int day() {//0이 포함되있을시 return 0;
    int max = 0;
    for (int k = 0; k < h; k++) {
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (box[k][i][j] == 0) {
                    return 0;
                }
                if (max < box[k][i][j]) {
                    max = box[k][i][j];
                }
            }
        }
    }
    return max;
}

int main(){
    scanf("%d %d %d", &m, &n, &h);

    struct P* Q = malloc(h * m * n * sizeof(struct P));
    if (!Q) return 1;

    for (int k = 0; k < h; k++) {
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                scanf("%d", &box[k][i][j]);
                if (box[k][i][j] == 1) {//시작점 설정
                    push(Q, k, i, j);
                }
            }
        }
    }
    while (head != tail) {
        struct P cur = Q[head];
        pop();

        for (int dir = 0; dir < 6; dir++) {
            int nx = cur.x + dx[dir];
            int ny = cur.y + dy[dir];
            int nz = cur.z + dz[dir];


            if (nx < 0 || nx >= n || ny < 0 || ny >= m || nz < 0 || nz >= h)
                continue;
            if (box[nz][nx][ny] != 0)
                continue;

            box[nz][nx][ny] = box[cur.z][cur.x][cur.y] + 1;
            push(Q, nz, nx, ny);
        }
    }

    int t = day();
    
    printf("%d", t - 1);

    free(Q);

    return 0;
}
