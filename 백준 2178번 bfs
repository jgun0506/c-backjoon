#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>    // srand, rand 함수가 선언된 헤더 파일
#include <string.h>
#include <stdbool.h>
#include <stddef.h>
#include <math.h>



struct P {
    int x;
    int y;
};

int dist[102][102];

int dx[4] = { 1,0,-1,0 };
int dy[4] = { 0,1,0,-1 };

int head = 0;
int tail = 0;

void push(struct P Q[], int x, int y) {
    Q[tail].x = x;
    Q[tail].y = y;
    tail++;
}

void pop() {
    head++;
}

int main()
{
    int board[102][102];

    for (int i = 0; i < 102; i++) {//-1로 초기화
        for (int j = 0; j < 102; j++) {
            dist[i][j] = -1;
        }
    }

    int n, m;

    scanf("%d %d", &n, &m);

    for (int i = 0; i < n; i++) {
        char s[102];
        scanf("%s", s);
        for (int j = 0; j < m; j++) {
            board[i][j] = s[j] - '0';
        }
    }
    
    struct P Q[102*102];

    push(Q, 0, 0);//시작점
    dist[0][0] = 1;

    while (head != tail) {
        struct P cur = Q[head];
        pop();
        
        for (int i = 0; i < 4; i++) {
            int nx = cur.x + dx[i];
            int ny = cur.y + dy[i];

            if (nx < 0 || nx >= n || ny < 0 || ny >= m)
                continue;
            if (board[nx][ny] == 0 || dist[nx][ny] != -1)
                continue;
            
            dist[nx][ny] = dist[cur.x][cur.y] + 1;
            push(Q, nx, ny);
        }   
    }
    printf("%d", dist[n - 1][m - 1]);
    return 0;

}


