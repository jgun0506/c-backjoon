#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>    // srand, rand 함수가 선언된 헤더 파일
#include <string.h>
#include <stdbool.h>
#include <stddef.h>
#include <math.h>

/*
    1926번과 유사함
    1. 행 열 바꼇을때 대처법
*/



struct P {
    int x;
    int y;
};

int head = 0;
int tail = 0;

int dx[4] = { 0,1,0,-1 };
int dy[4] = { 1,0,-1,0 };
bool vis[51][51];

int board[51][51];

void push(struct P *Q,int x, int y) {
    Q[tail].x = x;
    Q[tail].y = y;
    tail++;
}
void pop() {
    head++;
}

int main()
{
    int t;

    scanf("%d", &t);

    for (int count = 0; count < t; count++) {
        int m, n, k;
        scanf("%d %d %d", &m, &n, &k);

        for (int a = 0; a < n; a++) {
            for (int b=0; b < m; b++) {
                board[a][b] = 0;
                vis[a][b] = 0;
            }
        }

        for (int in = 0; in < k; in++) {//k번 밭에 배추심기
            int x, y;
            scanf("%d %d", &y, &x);
            board[x][y] = 1;
        }
        int ji = 0;
        struct P Q[51 * 51];


        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                head = 0;
                tail = 0;
                if (board[i][j] == 1 && vis[i][j] == 0) {
                    ji++;
                    push(Q, i, j);
                    vis[i][j] = 1;
                    while (head != tail) {
                        struct P cur = Q[head];
                        pop();

                        for (int dir = 0; dir < 4; dir++) {
                            int nx = cur.x + dx[dir];
                            int ny = cur.y + dy[dir];

                            if (nx < 0 || nx >= n || ny < 0 || ny >= m)
                                continue;
                            if (vis[nx][ny] || board[nx][ny] != 1)
                                continue;

                            push(Q, nx, ny);
                            vis[nx][ny] = 1;
                        }
                    }
                }
                
            }


        }
        printf("%d\n", ji);
    }
    return 0;
}


