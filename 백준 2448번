#define _CRT_SECURE_NO_WARNINGS
#pragma comment(linker, "/STACK:28388608")   // 8MB 스택메모리늘려줌
#include <stdio.h>
#include <stdlib.h>    // srand, rand 함수가 선언된 헤더 파일
#include <string.h>
#include <stdbool.h>
#include <stddef.h>

/*
제발 행렬다룰때 좌표처럼보지마라
1.x값이 올라가면 아래쪽으로 배치
*/

char arr[7000][7000];

void star(int x,int y,int n) {

    if (n == 3) {
        arr[x][y] = '*';
        arr[x + 1][y - 1] = '*';//x-1 아니다 제발
        arr[x + 1][y + 1] = '*';

        for (int i = -2; i < 3; i++) {
            arr[x + 2][y + i] = '*';
        }
        return;
    }

    star(x + n / 2, y - n / 2, n / 2);
    star(x + n / 2, y + n / 2, n / 2);
    star(x, y, n / 2);

    return;
}

int main()
{
    int n;
    scanf("%d", &n);
    for (int i = 0; i < n; i++) {//공백으로 초기화할경우 재귀함수돌릴때 굳이 공백추가안해도됨
        for (int j = 0; j < 2 * n - 1; j++) {
            arr[i][j] = ' ';
        }
    }

    star(0, n-1, n);

    for (int i = 0; i < n; i++) {
        printf("%s\n", arr[i]);
    }

    return 0;
}
