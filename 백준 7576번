#define _CRT_SECURE_NO_WARNINGS
#pragma comment(linker, "/STACK:28388608")   // 8MB 스택메모리늘려줌
#include <stdio.h>
#include <stdlib.h>    // srand, rand 함수가 선언된 헤더 파일
#include <string.h>
#include <stdbool.h>
#include <stddef.h>
#include <math.h>

struct P {
    short x;
    short y;
};

int box[1002][1002];
int m, n;
int head, tail;

int dx[4] = { 1,0,-1,0 };
int dy[4] = { 0,1,0,-1 };

void push(struct P Q[], int x, int y) {
    Q[tail].x = x;
    Q[tail].y = y;
    tail++;
}

void pop() {
    head++;
}
int day() {//0이 포함되있을시 return 0;
    int max = 0;
    
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (box[i][j] == 0) {
                return 0;
            }
            if (max < box[i][j]) {
                max = box[i][j];
            }
        }
    }

    return max;
}

int main(){
    scanf("%d %d", &m, &n);

    struct P* Q = malloc(m * n * sizeof(struct P));
    if (!Q) return 1;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            scanf("%d", &box[i][j]);
            if (box[i][j] == 1) {//시작점 설정
                push(Q, i, j);
            }
        }
    }
    
    while (head != tail) {
        struct P cur = Q[head];
        pop();

        for (int dir = 0; dir < 4; dir++) {
            int nx = cur.x + dx[dir];
            int ny = cur.y + dy[dir];

            if (nx < 0 || nx >= n || ny < 0 || ny >= m)
                continue;
            if (box[nx][ny] != 0)
                continue;

            box[nx][ny] = box[cur.x][cur.y] + 1;
            push(Q, nx, ny);
        }
    }
    int t = day();
    
    printf("%d", t - 1);

    free(Q);

    return 0;
}
